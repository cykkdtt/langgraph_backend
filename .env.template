# 是否启用结构化日志
STRUCTURED_LOGGING = true

# 是否启用JSON格式日志
JSON_LOGGING = false

# 日志文件路径
LOG_FILE_PATH = "logs/app.log"

# 日志文件最大大小 (MB)
LOG_MAX_SIZE = 10

# 日志文件备份数量
LOG_BACKUP_COUNT = 5

# ================================
# 安全配置
# ================================

# JWT密钥 (用于身份验证)
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT过期时间 (秒)
