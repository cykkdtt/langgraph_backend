# ================================
# 性能配置
# ================================

# 数据库连接池大小
DB_POOL_SIZE=10

# 数据库连接池最大溢出
DB_MAX_OVERFLOW=20

# HTTP请求超时 (秒)
HTTP_TIMEOUT=30

# LLM请求超时 (秒)
LLM_TIMEOUT=60

# ================================
# 功能开关
# ================================

# 是否启用记忆功能
ENABLE_MEMORY=true

# 是否启用工具功能
ENABLE_TOOLS=true

# 是否启用多智能体功能
ENABLE_MULTI_AGENT=true

# 是否启用网络搜索
ENABLE_WEB_SEARCH=true

# 是否启用文件上传
ENABLE_FILE_UPLOAD=true

# ================================
# 其他配置
# ================================

# 临时文件目录
TEMP_DIR=temp

# 上传文件最大大小 (MB)
MAX_UPLOAD_SIZE=100

# 会话超时时间 (秒)
SESSION_TIMEOUT=1800